# Production Environment Configuration
# This file is used when running: npm run build

# API Base URL - Update this to your production backend URL
# Examples:
#   - Same domain: VITE_API_BASE_URL=/api
#   - Different domain: VITE_API_BASE_URL=https://api.yourdomain.com
#   - With port: VITE_API_BASE_URL=https://api.yourdomain.com:3000
VITE_API_BASE_URL=https://api.yourdomain.com

# API Endpoint Prefix
VITE_API_PREFIX=/api

# App Configuration
VITE_APP_TITLE=Factory EIP
VITE_APP_ENV=production

# Disable debug mode in production
VITE_DEBUG=false
